   <!-- Background Image !-->
   <style type="text/css">
      body{
         background-color: #f4f4f4;
      }
      #bgImage {
         background-position: center;
         background-size: cover;
         background-repeat: no-repeat;
         padding-top: 5em;
         padding-bottom: 5em;
      }
      .swiper-container {
         width: 100%;
         height: 657px;
      }
      .swiper-slide.img{
         width :100%;

      }
      .swiper-slide {
         text-align: center;
         font-size: 18px;
         background: #fff;
         /* Center slide text vertically */
         display: -webkit-box;
         display: -ms-flexbox;
         display: -webkit-flex;
         display: flex;
         -webkit-box-pack: center;
         -ms-flex-pack: center;
         -webkit-justify-content: center;
         justify-content: center;
         -webkit-box-align: center;
         -ms-flex-align: center;
         -webkit-align-items: center;
         align-items: center;
      }
   </style>
</head>
