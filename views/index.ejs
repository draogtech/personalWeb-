<div class="ui contact container bg">
   <div class="ui large header contact-form">Contact Me</div>
   <div class="content">
      <form class="ui tiny form" method="post" action="/">
            <div class="field">
               <input type="text" name="first_name" placeholder="First Name">
            </div>
            <div class="field">
               <input type="text" name="last_name" placeholder="Last Name">
            </div>

         <div class="two fields">
            <div class="field">
               <input type="email" name="email" placeholder="E-mail">
            </div>
            <div class="field">
               <input type="text" name="phone_number" placeholder="Phone Number">
            </div>
         </div>
         <div class="field">
            <textarea name="message" placeholder="Write message here"></textarea>
         </div>
         <input type="submit" value="Submit" class="ui submit button"/>
          <%- messages() %>
      </form>
   </div>
</div>


